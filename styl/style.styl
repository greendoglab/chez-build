// functions

transition(p, d, t)
    -webkit-transition-property: p;
    -webkit-transition-duration: d;
    -webkit-transition-timing-function: t;
    -moz-transition-property: p;
    -moz-transition-duration: d;
    -moz-transition-timing-function: t;
    -o-transition-property: p;
    -o-transition-duration: d;
    -o-transition-timing-function: t;

// variables

border_bottom_solid = 1px dashed rgba(63, 11, 11, 0.3);
text_color = #716e6e
link_color = #1783b6
link_hover_color = #1783b6
title_color = #1783b6
block_bottom = 3em
box_top = 1em

body
    font: 100%/100% chaletmedium, Helvetice, arial
    padding 0
    margin 0
    background #000 url(../images/main_back.jpg) no-repeat 50% 0
    color text_color

h1, h2, h3, h4, h5
    font-weight normal

a
    color text_color
    transition(all, 0.3s, ease)
    &:hover
        text-decoration none

img
    max-width 100%
    display block
    text-align center
    margin auto

.if iframe,
.if object,
.if embed
  /*position: absolute;*/
  max-width 100%


// main classes

.title
    text-transform uppercase
    margin-bottom .3em

.decor_line
    border-top 1px solid #a69f9e
    border-bottom 1px solid #796e6d

.links_list
    li
        padding 2px 0 2px 30px
        background url(../images/bullet.jpg) no-repeat 0 50%
        a
            font-size 1.1em
            text-transform lowercase

// classes

.site_nav
    position absolute
    top 0px
    right -91px
    width 90px
    text-align right
    padding-top 10px
    ul
        list-style none
        padding-left 0
        padding-bottom 28px
        border-bottom 1px solid #fff
        li
            a
                line-height 1
                font-size 1.1em
                color #fff
    .social
        margin-top 12px
        text-align right
        .twitter
        .facebook
            display inline-block
            width 30px
            height 30px
        .twitter
            background url(../images/icon_twitter.png) no-repeat
        .facebook
            background url(../images/icon_facebook.png) no-repeat

.container
    position relative
    width 602px
    margin 0 auto
    padding 0px 22px 30px 22px
    background #fff
    border 1px solid #a5a5a5
    border-top none

.site_header
    overflow hidden
    padding-top 30px
    margin-left 0px
    // margin-top -6px
    // margin-bottom 10px
    .logo
        float left
        display block
        width 304px
        height 76px
        margin-bottom 20px
        background url(../images/logo.png) no-repeat
    .opening
        float right
        span
            display block
            margin-bottom .2em
            &.opening
            &.month
                text-transform uppercase
                font-size 1.4em
            &.month
                padding-bottom .6em
            &.year
                font-size 3.2em
    .decor_line
        clear both

.welcome
    overflow hidden
    padding-top 1.1em
    margin-bottom block_bottom
    article
        float left
        width 380px
        line-height 1.4
        font-size 1.2em
        p
            margin-top 0px
    .info 
        float right
        width 182px
        font-size .7em
        text-align right
        text-transform uppercase
        span
            display block
            margin-top 0
        .adr
            .postal-code
                padding-bottom .5em
        .adr
        .schedule
            padding-bottom .4em

.events
    margin-bottom block_bottom
    .event_image
        margin-top box_top

.menus
    margin-bottom block_bottom
    h3
        .click_to_view
            float right
            text-transform none
            font-size 0.9em
    .decor_line
        clear both
    ul
        margin-top 7em
        margin-bottom 5em
        text-align center
        li
            display inline-block
            margin-left 112px
            &:first-child
                margin-left -3.2em

.gallery
    margin-bottom block_bottom
    .gallery_box
        position relative
        margin-top box_top
        .control_left
        .control_right
            position absolute
            display block
            width 35px
            height 35px
            cursor pointer
            z-index 9999
        .control_left
            bottom 10px
            right 44px
            background url(../images/control_left.png) no-repeat
        .control_right
            bottom 10px
            right 10px
            background url(../images/control_right.png) no-repeat

.about
    article
        padding-top box_top
        line-height 1.7
        font-size .9em
        p
            margin-top 0px
            margin-bottom 2em
    .links_list
        margin-top 3em
        padding-left 0
        li
            display inline-block
            margin-left: 58px;
            &:first-child
                margin-left 0

.site_footer
    .copy
        width 602px
        margin 0 auto
        padding 10px 22px
        text-align right
        color #fff
        font-size 0.7em

